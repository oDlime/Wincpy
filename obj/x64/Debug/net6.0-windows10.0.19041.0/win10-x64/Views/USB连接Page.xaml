<Page
    x:Class="Wincpy.Views.USB连接Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <NumberBox x:ConnectionId='3' Name="fenbianlv" Header="分辨率" Value="NaN" PlaceholderText="1024" AcceptsExpression="false" Width="150" Grid.Row="0" Grid.Column="0"/>
        <NumberBox x:ConnectionId='4' Name="zhenlv" Header="帧率" Value="60" SpinButtonPlacementMode="Inline" SmallChange="10" LargeChange="100"  Grid.Row="0" Grid.Column="1" Width="150"/>
        <CheckBox x:ConnectionId='5' Name="zhiding" Content="置顶" Grid.Row="1" Grid.Column="0" Margin="20 20 0 0"/>
        <TextBox x:ConnectionId='6' Name="malv" Header="码率 (M或k)" PlaceholderText="8M"  Grid.Row="1" Grid.Column="1" Width="150"/>
        <CheckBox x:ConnectionId='7' Name="zhidu" Content="只读" Grid.Row="2" Grid.Column="0" Margin="20 20 0 0"                    />
        <CheckBox x:ConnectionId='8' Name="changliang" Content="屏幕常亮" Grid.Row="1" Grid.Column="0" Margin="100 20 0 0"                         />
        <CheckBox x:ConnectionId='9' Name="xiping" Content="设备息屏" Grid.Row="2" Grid.Column="0" Margin="100 20 0 0"                     />
        <ComboBox x:ConnectionId='10' Name="devis"  ItemsSource="{Binding devices}" DisplayMemberPath="{Binding devices}" SelectedValuePath="{Binding devices}"
          Header="设备列表" Width="150"                       Grid.Row="4" Grid.Column="1" Margin="75 0 0 0"/>
        <Button x:ConnectionId='11' Content="检测" Grid.Row="4" Grid.Column="1" Margin="230 27 0 0"                   />
        <Button x:ConnectionId='12' Content="连接" Grid.Row="5" Grid.Column="1" Margin="75 0 0 0" Width="200"                />
        <TextBlock x:ConnectionId='13' Text="" Grid.Row="6" Grid.Column="0" Margin="45 20 0 0" Name="txtLog"/>
        <ProgressRing x:ConnectionId='14' Name="prog" IsActive="False" Grid.Row="6" Grid.Column="0" Margin="0 0 150 0"/>
    </Grid>
</Page>

